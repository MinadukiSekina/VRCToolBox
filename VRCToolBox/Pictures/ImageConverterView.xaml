<Window x:Class="VRCToolBox.Pictures.ImageConverterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRCToolBox.Pictures"
        xmlns:pv="clr-namespace:VRCToolBox.Pictures.ViewModel"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:wpftk="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        xmlns:siv="https://github.com/kekyo/SkiaImageView"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="画像を変換……" Height="450" Width="800" WindowStartupLocation="CenterScreen" 
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type=pv:ImageConverterViewmodel}"
        >
    <Window.Resources>
        <local:PathToPictureConverter x:Key="PathToPictureConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ComboBox ItemsSource="{Binding ImageFormats}" SelectedValuePath="Key" SelectedValue="{Binding SelectFormat.Value}" DisplayMemberPath="Value" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Width="188"/>
        <Slider Value="{Binding QualityOfConvert.Value}" 
                Maximum="100" Minimum="1" Margin="36,0,36,0" VerticalAlignment="Center" TickPlacement="Both"
                TickFrequency="1" IsSnapToTickEnabled="True">
            <ui:ControlHelper.Header>
                <TextBlock Text="{Binding Value, StringFormat=品質（変換後の容量に影響します）: {0}, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Slider}}"
                           FontSize="24"/>
            </ui:ControlHelper.Header>
        </Slider>
        <Button Content="{Binding ButtonText.Value, Mode=OneWay}" Margin="0,335,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24" 
                Command="{Binding ConvertImageFormatAsyncCommand}"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <ListView Grid.Column="2"
                  ItemsSource="{Binding TargetImages}" SelectedIndex="{Binding IndexOfTargets.Value}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <wpftk:VirtualizingWrapPanel VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" VirtualizingPanel.ScrollUnit="Pixel"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <siv:SKImageView Width="100" Height="75" Source="{Binding Path=.}" Stretch="Uniform"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
