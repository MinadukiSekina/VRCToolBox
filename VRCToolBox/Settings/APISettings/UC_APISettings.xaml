<UserControl x:Class="VRCToolBox.Settings.APISettings.UC_APISettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VRCToolBox.Settings.APISettings"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type=local:VM_APISettings}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Twitter" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="71,24,0,0"/>
        <Button Grid.Column="1" Content="連携" VerticalAlignment="Top" Margin="72,20,0,0" Command="{Binding TwitterAuthAsyncCommand}"/>
        <Button Grid.Column="1" Content="解除" VerticalAlignment="Top" Margin="177,20,0,0" Command="{Binding TwitterLogoutAsyncCommand}"/>
    </Grid>
</UserControl>
