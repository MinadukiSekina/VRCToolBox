<Window x:Class="VRCToolBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRCToolBox"
        mc:Ignorable="d"
        Title="VRCToolBox" Height="347" Width="374" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Button x:Name="B_MovePhoto" Content="写真の移動" HorizontalAlignment="Left" Margin="201,27,0,0" VerticalAlignment="Top" FontSize="16" Width="121" Click="B_MovePhoto_Click" Height="44"/>
        <Button x:Name="B_OpenPictureWindow" Content="写真の確認" HorizontalAlignment="Left" Margin="213,111,0,0" VerticalAlignment="Top" FontSize="16" Width="97" Click="B_OpenPictureWindow_Click" Height="38"/>
        <Button x:Name="B_OpenUnityListWindow" Content="Unity" HorizontalAlignment="Left" Margin="213,173,0,0" VerticalAlignment="Top" FontSize="16" Width="97" Click="B_OpenUnityListWindow_Click" Height="38"/>
        <Button x:Name="B_MoveLog" Content="ログの移動" HorizontalAlignment="Left" Margin="44,27,0,0" VerticalAlignment="Top" FontSize="16" Width="121" Height="44" Click="B_MoveLog_Click"/>
        <Button x:Name="B_OpenLogWindowy" Content="ログの確認" HorizontalAlignment="Left" Margin="56,111,0,0" VerticalAlignment="Top" FontSize="16" Width="97" Click="B_OpenLogWindow_Click" Height="38"/>
        <Button x:Name="B_OpenOSCWindow" Content="OSC" HorizontalAlignment="Left" Margin="56,173,0,0" VerticalAlignment="Top" FontSize="16" Width="97" Click="B_OpenOSCWindow_Click" Height="38"/>
        <Button x:Name="B_OpenUnityListWindow_Copy" Content="設定" HorizontalAlignment="Left" Margin="212,234,0,0" VerticalAlignment="Top" FontSize="16" Width="98" Click="B_OpenUnityListWindow_Copy_Click" Height="38"/>
        <Image Margin="0,5,5,0" Source="/Images/Information.png" Stretch="Fill" MouseLeftButtonDown="Image_MouseLeftButtonDown" HorizontalAlignment="Right" VerticalAlignment="Top" Width="24" Height="24"/>
        <Image Margin="0,-1,20,0" Source="/Images/Annotation.png" Stretch="Fill" Name="Annotation" Visibility="Collapsed" MouseLeftButtonDown="Image_MouseLeftButtonDown" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Window>
